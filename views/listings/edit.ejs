<% layout("./layouts/boilerplate.ejs")%> 
<body>
    <div class="row"> 
        <div class="col-8 offset-2"> 
            <h1> Edit your Listing : </h1>
    <form method="post" action="/listings/<%= listing._id%>/?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="mb-3">
            <label for="title">Title: </label>
        <input name = "Listings[title]" value="<%= listing.title  %>" type="text" class="form-control" required> 
        <div class="valid-feedback"> Title looks good! </div>
        <div class="invalid-feedback">Please enter a valid Title! </div>  
        </div>
        <div class="mb-3">
            <label for="description"> Description: </label>
            <textarea name="Listings[description]" class="form-control" required> <%= listing.description %></textarea>
        </div>
        <div class="mb-3" > 
            <label for="Image url">Image : </label>
            <input name="Listings[image]" type="file" class="form-control" >
        </div>
        <div class="row"> 
            <div class="mb-3 col-md-4">
                <label for="price"> Price: </label>
              <input name="Listings[price]" value="<%= listing.price  %>" type="number" class="form-control" required > 
              <div class="invalid-feedback">Please enter a valid price </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location">Location: </label>
                <input name="Listings[location]" value="<%= listing.location  %>" type="text" class="form-control" required> 
                <div class="invalid-feedback">Please enter a valid Location </div>
            </div>
        </div>
        <div class="mb-3" >
            <label for="country">Country: </label>
            <input name="Listings[country]" value="<%= listing.country%>" type="text" required > 
            <div class="invalid-feedback">Please enter a valid Country </div>
        </div>

        <button class="btn btn-dark edit-btn mt-3 mb-3"> edit </button>
        </form>
        </div>
        </div>
</body>
