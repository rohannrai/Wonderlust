<% layout("./layouts/boilerplate.ejs")%> 
    <div class="container">
        <div class="row mt-3">
            <h1 class="col-6 offset-3"> Signup For WonderLust</h1>
            <div class="col-6 offset-3" >
               
                <form action="/signup" method="POST" novalidate class="needsvalidation"> 
                    <label for="username">Username: </label>
                    <input name = "username"  type="text" id="username" class="form-control" required> 
                    <div class="valid-feedback"> Username Available! </div>
                    <div class="invalid-feedback">Username Taken </div>
                    
                    <label for="email">Email : </label>
                    <input name = "email"  type="text" id="email" class="form-control" required> 
                    <div class="valid-feedback"> Looks Good! </div>

                    <label for="passwrd"> Password : </label>
                    <input name = "password"  type="password" id="password" class="form-control" required> 
                    <div class="valid-feedback"> Looks Good! </div>
                    <button class="btn btn-success mt-3" style="margin-bottom: 190px;"> Submit </button>
                </form>
            </div>
        </div>
    </div>
